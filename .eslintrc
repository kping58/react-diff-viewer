{
  "extends": ["airbnb-base", "plugin:@typescript-eslint/recommended"],
  "rules": {
    "no-tabs": "off",
    "@typescript-eslint/indent": ["error", 2],
    "max-len": ["error", {
      "code": 100
    }],
    "arrow-body-style": "off",
  },
  "env": {
    "mocha": true,
    "node": true,
    "browser": true,
  },
}
